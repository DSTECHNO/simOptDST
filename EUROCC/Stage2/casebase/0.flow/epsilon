FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 4.2511e-06;

boundaryField
{
     inlet
    {
        type            mapped;
        field           epsilon;
        setAverage      0;
        average         1e-12;
        interpolationScheme cell;
        value           uniform 1e-12;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 1e-12;
        value           uniform 1e-12;
    }


    top
    {
        type            symmetryPlane;
    }

    ".*"
    {
	type		epsilonWallFunction;
        value           uniform 0;
   }

    
}


// ************************************************************************* //
